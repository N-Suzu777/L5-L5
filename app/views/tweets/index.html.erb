<h1>ツイート一覧</h1>

<% @tweets.each do |e| %>
    <p>
        <li>
            <%= e.message %>
            <%=link_to '削除', "/tweets/#{e.id}" , data: { turbo_method: :delete } %>
            <% if e.liked?(current_user) %>
                <%= link_to 'いいね削除', like_path(e), data: { turbo_method: :delete } %>
            <% else %>
                <%= link_to 'いいね', likes_path(tweet_id: e.id),data: { "turbo-method": :post }  %>
            <% end %>
        </li>
    </p>
<% end %>

<br>
<% if current_user %>
    <%= link_to "ツイートをする" ,tweets_new_path %>
    <br><%= link_to "ログアウト" ,top_logout_path %>
<% end %>
<br>
<%= link_to "ログイン" ,top_main_path %>
